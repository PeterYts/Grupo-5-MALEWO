<%- include('./partials/head', { title:'Products', hojaCss:'styles-products'}) %>

<%- include('./partials/header') %>
    <main>
        
        <section class="titulo">
            <h2 class="title-line">PRODUCTOS </h2>
        </section>
        
        <div class="filtros">
            <p></i>Filtros </p> <img src="/img/filter.png" alt="">
        </div>
        
        <section class="buscador">
                
    
            <input type="search" name="busquedamusica" placeholder="buscar productos">
            <i class="fas fa-search" style="color: grey;"></i>        
            <!-- <input type="submit" value="Buscar"> -->
        
        </section>
        <section class="catalogo">
            <div class="lista-filtros">
                <h2 class="title-line-grey"></h2>
                <ul>
                    <li> 
                        <a href="*">MACETAS DE INTERIOR</a><i class="fas fa-plus"></i>
                    </li>
                    <li> <a href="*"> MACETAS DE EXTERIOR</a><i class="fas fa-plus"></i>
                    </li>
                    <li style="margin-top: 7px;"><a href="*"> ACCESORIOS </a><i class="fas fa-plus" style="align-self: flex-end;"></i>
                    

                    </li>
                </ul>
                <h2 class="title-line-grey"></h2>
                <ul>
                    <li> <a href="*">COLOR</a> <i class="fas fa-plus"></i>
                    </li>
                </ul>
                <h2 class="title-line-grey"></h2>
                <ul>
                    <li><a href="*"> FILTRAR POR PRECIO</a><i class="fas fa-plus"></i>
                    </li>
                </ul>

            </div>
            <div class="lista-de-productos">
                <% productList.forEach(prod => { %>
                <article class="article-hover">
                    <a href="/products/product/<%= prod.id %>"><img src="img/productos/<%= prod.Image %>" alt="maceta <%= prod.id %>"></a>
                    <p>MACETA 1</p>
                </article>
                <% }) %>
            </div>
        </section>

    </main>
<%- include('./partials/footer') %> 
    <script src="../js/prueba.js"></script>

</body>