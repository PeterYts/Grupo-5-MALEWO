<%- include('./partials/head', { title:'Product', hojaCss:'styles-product-detail'}) %>
<%- include('./partials/header') %>
    <main>
        <section class="main-section">
            <article class="support-img">
                <img src="/img/productos/<%= prod[0].Image %>" alt="support-img" class="support-img-ind">
                <img src="/img/productos/<%= prod[0].Image %>" alt="support-img" class="support-img-ind">
            </article>
            <article class="main-img-article">
                <img src="/img/productos/<%= prod[0].Image %>" alt="main-img" class="main-img">
            </article>
            <article class="info-buy-article">
                <div>
                    <h3><%= prod[0].Nombre %></h3>
                    <p class="description"><%= prod[0].Descripcion %></p>
                    <p class="price"><%= prod[0].Precio %></p>
                </div>
                <div>
                    <form>
                        <div class="quantity">
                            <label>Cantidad</label>
                            <select name="quantity">
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                            </select>
                        </div>
                        <button type="submit">COMPRAR</button>
                    </form>
                </div>
            </article>
        </section>
        <section class="secondary-section">
            <div>
                <h3 class="offers">Destacados / Ofertas</h3>
            </div>
            <div class="img-offer">
                <img src="/img/interior/Screenshot_1.png" alt="img-alt" class="img">
                <img src="/img/interior/Screenshot_9.png" alt="img-alt" class="img">
                <img src="/img/interior/Screenshot_10.png" alt="img-alt" class="img">
                <img src="/img/interior/Screenshot_17.png" alt="img-alt" class="img">
            </div>
        </section>
    </main>
<%- include('./partials/footer') %> 
    <script src="/js/prueba.js"></script>
</body>
</html>