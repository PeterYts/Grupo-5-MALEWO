<%- include('./partials/head', { title:'Product', hojaCss:'styles-create-product'}) %>
<%- include('./partials/header') %>
    <main>
        <section class="title-section">
            <h2>Modificar Producto</h2>
        </section>
        <section class="form-section">
            <form action="/products/<%= wantedProduct[0].id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                <label for="name">Nombre del producto</label>
                <input type="text" name="Nombre" id="name" value=" <%= wantedProduct[0].Nombre %>">
                <label for="description" >Descripción</label>
                <input type="text" name="Descripcion" id="description" value=" <%= wantedProduct[0].Descripcion %>">
                <label for="img">Imagenes</label>
                <input type="file" name="Image" id="img" accept=".jpg, .png, .jpeg, .tif, .tiff" multiple class="file-input">
                <label for="category">Categoría</label>
                <select name="category" id="category" class="select">

                    <option value="interior">INTERIOR </option>
                    <option value="exterior">EXTERIOR</option>                    
                    
                </select>
                <label for="price"value=" <%= wantedProduct[0].Precio %>">Precio</label>
                <input type="text" name="Precio" id="price" value=" <%= wantedProduct[0].Precio %>">
                <button type="submit">modificar</button>
            </form>
        </section>
    </main>
<%- include('./partials/footer') %> 
    <script src="../js/prueba.js"></script>
</body>
</html>